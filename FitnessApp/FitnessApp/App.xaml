<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.App">
    <!--
        Define global resources and styles here, that apply to all pages in your app.
    -->
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Main">#2c9cee</Color>
            <Color x:Key="Background">#D4D5DB</Color>
            <Color x:Key="TabBarBackground">#FAF8FA</Color>
            <Color x:Key="CardBackground">#ffff</Color>
            <Color x:Key="ButtonOutline">#5F6573</Color>
            <Color x:Key="Accent">#FF344A</Color>

            <Color x:Key="TextMain">#606572</Color>
            <Color x:Key="TabSelected">#f45f80</Color>
            <Color x:Key="TabUnSelected">#2C2D31</Color>
            <Color x:Key="TextPrimary">#25272B</Color>
      
        </ResourceDictionary>        
    </Application.Resources>
</Application>
